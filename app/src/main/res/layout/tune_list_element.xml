<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tune_list_element_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:textColor="#FFEBE6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tune_list_element_tuning" />

    <TextView
        android:id="@+id/tune_list_element_tuning"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="92dp"
        android:textColor="#FFEBE6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/tuning_list_element_edit_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="e"
        app:layout_constraintBottom_toBottomOf="@+id/tune_list_element_tuning"
        app:layout_constraintTop_toTopOf="@+id/tune_list_element_tuning"
        tools:layout_editor_absoluteX="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop = "55dp"

        />

    <Button
        android:id="@+id/tuning_list_element_delete_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="x"
        app:layout_constraintStart_toEndOf="@+id/tuning_list_element_edit_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="230dp"
        android:layout_marginTop = "55dp"
        />

    <Button
        android:id="@+id/tuning_list_element_choose_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="v"
        app:layout_constraintStart_toEndOf="@+id/tuning_list_element_delete_button"
        android:layout_marginLeft="310dp"
        android:layout_marginTop = "55dp"
        android:alpha = "0.0"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/choose"
        android:layout_marginLeft="330dp"
        android:layout_marginTop = "75dp"
        />

</RelativeLayout>